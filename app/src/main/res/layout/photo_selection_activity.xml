<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kuelye.demo.collagerator.gui.PhotoSelectionActivity" >

    <GridView
        android:id="@id/photos_grid_view"
        android:columnWidth="@dimen/photo_selection_gallery_column_width"
        android:horizontalSpacing="@dimen/photo_selection_gallery_spacing"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/photo_selection_gallery_spacing"
        android:gravity="center" />

    <Button
        android:id="@id/photo_select_button"
        android:layout_gravity="center"
        android:text="@string/photo_select_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/button_min_width_standard" />
</LinearLayout>
